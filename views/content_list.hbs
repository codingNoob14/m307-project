

<video autoplay muted loop class="homeVideo">
  <source src="/img/5-1.mp4" type="video/mp4">
</video>
<div class="collectionPageContent"> 


<div class="collectionTextOverlay">

<h1 class="collectionPageTitle">RICHARD JONES</h1> 
<p class="collectionPageSubtitle">THE COLLECTION</p>
</div>

<form method="get" action="/content" class="filters">
<div class="filterFunction"> 
  <div class="filterSpacerCategory">

  <label class="filtersCategory"> 
    <span>Category</span> 
    <select name="category" onchange="this.form.submit()"> 
      <option value="" {{#if (eq selectedCategory '')}}selected{{/if}}>All</option> 
      {{#each categories}} 
        <option value="{{this}}" {{#if (eq ../selectedCategory this)}}selected{{/if}}>{{this}}</option> 
      {{/each}} 
    </select> 
  </label> 
</div>
  <div class="filterSpacerSort">
  <label class="filtersSort"> 
    <span>Sort</span> 
    <select name="sort" onchange="this.form.submit()"> 
      <option value="newest" {{#if (eq selectedSort 'newest')}}selected{{/if}}>Newest first</option> 
      <option value="likes"  {{#if (eq selectedSort 'likes')}}selected{{/if}}>Most liked</option> 
    </select> 
  </label>
  </div>

  <noscript><button type="submit">Anwenden</button></noscript> 

  {{#if hasFilterActive}} 
    <a href="/content">Reset filter</a>
  {{/if}} 
  </div>
</form>



{{#if items.length}} 

  <div class="grid grid--cards"> 

    {{#each items}} 

      <article class="card"> 

        <a class="card__link" href="/content/{{slug}}" aria-label="Details zu {{title}} √∂ffnen"></a> 

 

        <figure class="card__media"> 

          <img src="{{imagePath}}" alt="{{title}}"> 

        </figure> 

        <div class="card__body"> 
          <div class="like-section">
            <span class="like-count">{{likeCount}}</span>
            
            {{#if ../currentUser}}
              <a
                href="/content/{{slug}}/like"
                data-like="true"
                data-slug="{{slug}}"
                data-liked="{{#if userHasLiked}}true{{else}}false{{/if}}"
                class="like-btn {{#if userHasLiked}}liked{{/if}}"
                title="{{#if userHasLiked}}Unlike{{else}}Like{{/if}} this content"
              >
                {{#if userHasLiked}}‚ù§Ô∏è{{else}}ü§ç{{/if}}
              </a>
            {{else}}
              <a href="/login?next={{encodeURIComponent '/content'}}" class="like-btn-loggedOut">
                ü§ç<br>Login to Like
              </a>
            {{/if}}
          </div>
          <div class="cardText">

          <h3 class="card__title"> 

            <p>{{title}}</p>

          </h3> 

 

          <p class="card__meta"> 

            {{category}} {{description}}

          </p> 
          </div>

 

 

          {{#if (canEdit this ../currentUser)}} 

            <div class="card__actions" style="margin-top:.5rem; display:flex; gap:.5rem; flex-wrap:wrap;"> 

              <a class="btn btn--sm" href="/content/{{slug}}/edit">Edit</a> 

              <form method="post" action="/content/{{slug}}/delete" style="display:inline;" onsubmit="return confirm('Eintrag l√∂schen?');"> 

                <button type="submit" class="btn btn--sm btn--danger">Delete</button> 

              </form> 

            </div> 

          {{/if}} 

        </div> 
 


      </article> 

    {{/each}} 

  </div> 

{{else}} 

  <p>Noch keine Inhalte.</p> 

{{/if}} 

 
</div>
