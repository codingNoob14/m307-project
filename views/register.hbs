<h1>{{title}}</h1>

{{#if errors}}
  <ul class="errors" role="alert" aria-live="polite">
    {{#each errors}}<li>{{this}}</li>{{/each}}
  </ul>
{{/if}}

<form method="post" action="/register" class="form" novalidate>
  <label>Name
    <input type="text" name="name" value="{{values.name}}" required autocomplete="name" autofocus>
  </label>

  <label>E-Mail
    <input type="email" name="email" value="{{values.email}}" required autocomplete="email">
  </label>

  <label>Passwort
    <input type="password" name="password" required minlength="8" autocomplete="new-password">
  </label>

  <label>Passwort best√§tigen
    <input type="password" name="password_confirm" required minlength="8" autocomplete="new-password">
  </label>

  <button type="submit">Konto erstellen</button>
</form>

<p>Schon ein Konto? <a href="/login">Zum Login</a></p>
